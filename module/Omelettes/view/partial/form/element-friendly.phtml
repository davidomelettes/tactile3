<?php

$elementType = $element->getAttribute('type');
if (!in_array($elementType, array('submit', 'checkbox'))) {
	$element->setAttribute('class', 'form-control');
}
if (!$elementType) {
	throw new \Exception('Missing element type for: ' . get_class($element));
}

?>
<div class="form-group<?php if ($this->formElementErrors($element)) echo " has-error"; ?><?php if ($element->getOption('group_class')) echo ' ' . $element->getOption('group_class'); ?>">
	<?php echo $this->partial(
			'partial/form/element-friendly/' . $elementType . '.phtml',
			array(
				'element'		=> $element,
			)); ?>
</div>